                                        <Style TargetType="DataGridRow">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Visibility}" Value="Collapsed">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGrid.RowStyle>
                                </DataGrid>
                            </Border>
                        </Grid>

                    </Grid>
                </Grid>

                <!--4. Datos Adicionales-->               

            </Grid>
        </Grid>
    </Grid>
</UserControl>
