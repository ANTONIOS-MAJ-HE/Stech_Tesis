<UserControl x:Class="ST_FORMS.View.Empleado.EntradaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ST_FORMS.View.Empleado"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="Transparent">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Grid Grid.Row="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Style="{StaticResource {x:Type ScrollViewer}}">
                    <Grid Grid.Column="0">
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="txt_searchfactura" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="2,5,2,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Factura">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>

                            <TextBox x:Name="txt_searchrucproveedor" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Ruc Proveedor">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>

                            <TextBox x:Name="txt_searchproveedor" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Proveedor">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>

                            <TextBox x:Name="txt_searchnorden" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Nro Orden">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>

                            <TextBox x:Name="txt_searchproducto" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Producto">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>

                            <TextBox x:Name="txt_searchmarca" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
                                 CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
                                 VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,5"
                                 GotFocus="txt_searchfactura_GotFocus" LostFocus="txt_searchfactura_LostFocus" Text="Marca">
                                <TextBox.Background>
                                    <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                        <VisualBrush.Visual>
                                            <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </TextBox.Background>
                            </TextBox>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Height="40">
                    <Button x:Name="btn_Limp_Copy" Click="btn_Limp_Copy_Click"
                        FontSize="12" FontFamily="Montserrat" Cursor="Hand"
                        BorderThickness="0" Foreground="White" VerticalAlignment="Top"
                        Background="#773DFF" Width="40" Height="40" Margin="0,0,5,0">
                        <fa:IconImage Icon="Search" Foreground="White" Width="20" Height="20"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#773DFF"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Height="40" Width="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#836EFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="btn_Limp_Copy1" Click="btn_Limp_Copy1_Click"
                        FontSize="12" FontFamily="Montserrat" Cursor="Hand"
                        BorderThickness="0" Foreground="White" VerticalAlignment="Top"
                        Background="#773DFF" Width="40" Height="40">
                        <fa:IconImage Icon="Broom" Foreground="White" Width="20" Height="20"/>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#773DFF"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Height="40" Width="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#836EFB"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Main Content Section -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Section (Form Inputs) -->
                <Grid Grid.Column="0" Margin="0,0,5,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                            <Grid Grid.Column="0">
                                <StackPanel  Width="180">

                                    <TextBlock Text="Tipo" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <ComboBox x:Name="cmbTipo" Width="180" Height="28" Margin="0,5,0,10" SelectionChanged="cmbTipo_SelectionChanged" 
FontSize="13" FontWeight="Medium" FontFamily="Montserrat"
Foreground="Black" BorderBrush="{StaticResource plainTextColor3}"
BorderThickness="0,0,0,2" VerticalContentAlignment="Center" Padding="5,0,0,0">
                                        <ComboBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="ArrowDown" Foreground="{StaticResource plainTextColor3}" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </ComboBox.Background>
                                    </ComboBox>

                                    <TextBlock Text="Responsable" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <ComboBox x:Name="cmbResponsable" Width="180" Height="28" Margin="0,5,0,10" SelectionChanged="cmbResponsable_SelectionChanged"
FontSize="13" FontWeight="Medium" FontFamily="Montserrat"
Foreground="Black" BorderBrush="{StaticResource plainTextColor3}"
BorderThickness="0,0,0,2" VerticalContentAlignment="Center" Padding="5,0,0,0">
                                        <ComboBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="ArrowDown" Foreground="{StaticResource plainTextColor3}" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </ComboBox.Background>
                                    </ComboBox>

                                    <TextBlock Text="Fecha Entrada" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <StackPanel Orientation="Horizontal">
                                        <DatePicker x:Name="dt_entrada" Width="180" Height="28" VerticalContentAlignment="Center"/>
                                    </StackPanel>


                                    <TextBlock Text="Serie Factura" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtserie" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White"
CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

                                    <TextBlock Text="Numero Factura" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtNrofct" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White"
     CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
     VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

                                    <TextBlock Text="Fecha Factura" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <StackPanel Orientation="Horizontal">
                                        <DatePicker x:Name="dtFact" Width="180" Height="28" VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <TextBlock Text="Ruc Proveedor" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <StackPanel Orientation="Horizontal" Margin="0" >

                                        <TextBox x:Name="txtRUC" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White"
CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="130"
VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                            <TextBox.Background>
                                                <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                    <VisualBrush.Visual>
                                                        <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </TextBox.Background>
                                        </TextBox>

                                        <Button x:Name="btn_proveedores" Content="..." Margin="5,0,0,10" Click="btn_proveedores_Click" Width="30" 
FontSize="12" FontFamily="Montserrat" Cursor="Hand" BorderThickness="0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#773DFF"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="FontFamily" Value="Montserrat"/>
                                                    <Setter Property="Cursor" Value="Hand"/>
                                                    <Setter Property="Template">
                                                        <Setter.Value>
                                                            <ControlTemplate TargetType="Button">
                                                                <Border Height="30" Width="Auto" CornerRadius="15" Background="{TemplateBinding Background}">
                                                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                                </Border>
                                                            </ControlTemplate>
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#836EFB"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                    </StackPanel>

                                    <TextBlock Text="Proveedor" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtProveedor" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" TextChanged="txtProveedor_TextChanged"
CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

                                    <TextBlock Text="Origen" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtOrigen" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White"
     CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
     VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

                                    <TextBlock Text="Moneda" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <ComboBox x:Name="cmbMoneda" Width="180" Height="28" Margin="0,5,0,10" SelectionChanged="cmbResponsable_SelectionChanged"
FontSize="13" FontWeight="Medium" FontFamily="Montserrat"
Foreground="Black" BorderBrush="{StaticResource plainTextColor3}"
BorderThickness="0,0,0,2" VerticalContentAlignment="Center" Padding="5,0,0,0">
                                        <ComboBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="ArrowDown" Foreground="{StaticResource plainTextColor3}" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </ComboBox.Background>
                                    </ComboBox>

                                    <TextBlock Text="Fecha Guia" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <StackPanel Orientation="Horizontal">
                                        <DatePicker x:Name="dtGuia" Width="180" Height="28" VerticalContentAlignment="Center"/>
                                    </StackPanel>

                                    <Button x:Name="btn_Nuevo" Content="Agregar" Margin="5,0,0,10" Click="buttonnvo_Click" Width="175" HorizontalAlignment="Left"
    FontSize="12" FontFamily="Montserrat" Cursor="Hand" BorderThickness="0">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Background" Value="#773DFF"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="BorderThickness" Value="0"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="FontFamily" Value="Montserrat"/>
                                                <Setter Property="Cursor" Value="Hand"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Height="30" Width="Auto" CornerRadius="15" Background="{TemplateBinding Background}">
                                                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#836EFB"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>

                                    <Label x:Name="lblCmp" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="180" FontSize="12" Foreground="DarkGray"/>
                                    <Label x:Name="lblUnit" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="180" FontSize="12" Foreground="DarkGray"/>
                                    <Label x:Name="lblCosto" Content="" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="180" FontSize="12" Foreground="DarkGray"/>

                                </StackPanel>
                            </Grid>
                        </ScrollViewer>



                        <Grid Grid.Column="1">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" CanContentScroll="True" Style="{StaticResource {x:Type ScrollViewer}}">
                                <Grid Grid.Column="0">

                                    <StackPanel Orientation="Horizontal" Margin="0" >

                                        <Label x:Name="lblcant_entradas" Content=""  VerticalAlignment="Top" Height="36" FontFamily="Arial Rounded MT Bold"  FontStretch="Normal" FontWeight="Bold" Width="50" Foreground="White"/>

                                        <Button x:Name="button1" Content=""  VerticalAlignment="Top" Width="30" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="button1_Click">
                                            <Button.Background>
                                                <ImageBrush ImageSource="/3688457_refresh_sync_map_reload_rotate_icon.png"/>
                                            </Button.Background>
                                        </Button>
                                        <Button x:Name="button2" Content="" VerticalAlignment="Top" Width="30" Height="30" BorderBrush="{x:Null}" Foreground="{x:Null}" Click="button2_Click_1">
                                            <Button.Background>
                                                <ImageBrush ImageSource="/3688460_pencil_text_update_write_draw_icon.png"/>
                                            </Button.Background>
                                        </Button>

                                        <Label x:Name="lbl_mode" Content="Modo Edición : OFF" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White">
                                            <Label.Background>
                                                <ImageBrush/>
                                            </Label.Background>
                                        </Label>
                                    </StackPanel>
                                </Grid>
                            </ScrollViewer>

                            <Grid Grid.Row="1">
                                <Border Background="#200F53" CornerRadius="10" Padding="10" Margin="5,0,0,0">
                                    <DataGrid x:Name="dtgEntradas" AutoGenerateColumns="False" Background="#200F53" BorderThickness="0" SelectionChanged="dtgEntradas_SelectionChanged" >
                                        <DataGrid.ColumnHeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="Foreground" Value="#BCBEE0"/>
                                                <Setter Property="Padding" Value="10,0,0,10"/>
                                                <Setter Property="FontFamily" Value="Montserrat"/>
                                                <Setter Property="FontSize" Value="15"/>
                                            </Style>
                                        </DataGrid.ColumnHeaderStyle>
                                        <DataGrid.Columns>
                                            <!-- Define your columns here -->
                                            <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}"/>
                                            <DataGridTextColumn Header="Responsable" Binding="{Binding Responsable}"/>
                                            <DataGridTextColumn Header="Fecha_Entrada" Binding="{Binding Fecha_Entrada}"/>
                                            <DataGridTextColumn Header="Serie_Fact" Binding="{Binding Serie_Fact}"/>
                                            <DataGridTextColumn Header="Nro_Fact" Binding="{Binding Nro_Fact}"/>
                                            <DataGridTextColumn Header="RUC_Proveedor" Binding="{Binding RUC_Proveedor}"/>
                                            <DataGridTextColumn Header="Proveedor" Binding="{Binding Proveedor}"/>

                                            <DataGridTextColumn Header="Origen" Binding="{Binding Origen}"/>
                                            <DataGridTextColumn Header="Moneda" Binding="{Binding Moneda}"/>
                                            <DataGridTextColumn Header="MiniCodigo" Binding="{Binding MiniCodigo}"/>
                                            <DataGridTextColumn Header="Producto" Binding="{Binding Producto}"/>
                                            <DataGridTextColumn Header="Marca" Binding="{Binding Marca}"/>
                                            <DataGridTextColumn Header="Precio_Unitario" Binding="{Binding Precio_Unitario}"/>
                                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}"/>

                                            <DataGridTextColumn Header="Fecha_guia" Binding="{Binding Fecha_guia}"/>
                                            <DataGridTextColumn Header="Fecha_factura" Binding="{Binding Fecha_factura}"/>
                                            <DataGridTextColumn Header="Observaciones" Binding="{Binding Observaciones}"/>
                                            <DataGridTextColumn Header="Id_Entrada" Binding="{Binding Id_Entrada}"/>
                                        </DataGrid.Columns>
                                        <DataGrid.RowStyle>
                                            <Style TargetType="DataGridRow">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Visibility}" Value="Collapsed">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGrid.RowStyle>
                                    </DataGrid>
                                </Border>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Right Section (DataGrid and Buttons) -->
                <Grid Grid.Column="1" Margin="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--2 Datos Orden-->

                    <Grid Grid.Row="0" Margin="0,0,0,0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer VerticalScrollBarVisibility="Auto" CanContentScroll="True">
                            <Grid Grid.Column="0">
                                <StackPanel  Width="180">

                                    <Label x:Name="lblPartnumb" Content="" HorizontalAlignment="Left" Height="28"  VerticalAlignment="Top" Width="180" RenderTransformOrigin="0.5,0.5" Visibility="Collapsed"/>

                                    <TextBlock Text="Producto" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtProducto" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" 
CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

                                    <TextBlock Text="Mini Codigo" Foreground="DarkGray" FontSize="12" FontWeight="Medium" FontFamily="Montserrat"/>
                                    <TextBox x:Name="txtMinicod" FontSize="13" FontWeight="Medium" FontFamily="Montserrat" Foreground="White" TextChanged="textBox4_TextChanged" 
CaretBrush="LightGray" BorderBrush="DarkGray" BorderThickness="0,0,0,2" Height="28" Width="180"
VerticalContentAlignment="Center" Padding="20,0,0,0" Margin="0,5,0,10">
                                        <TextBox.Background>
                                            <VisualBrush Stretch="None" AlignmentX="Left" AlignmentY="Center">
                                                <VisualBrush.Visual>
                                                    <fa:IconImage Icon="UserAlt" Foreground="DarkGray" Width="15"/>
                                                </VisualBrush.Visual>
                                            </VisualBrush>
                                        </TextBox.Background>
                                    </TextBox>

